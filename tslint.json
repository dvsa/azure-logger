{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "rules": {
        "no-console" : false,
        "max-line-length" : false,
        "quotemark" : [true, "single", "avoid-escape", "avoid-template"],
        "object-literal-sort-keys": false,
        "interface-name": false,
        "no-namespace": [true, "allow-declarations"]
    },
    "rulesDirectory": [],
    "linterOptions": {
        "exclude": [
            "**/*.js"
        ]
    }
}