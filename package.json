{
  "name": "@dvsa/azure-logger",
  "version": "5.0.0-test1",
  "description": "Shareable Logging Facade, implemented with Winston",
  "main": "dist/index.js",
  "scripts": {
    "postinstall": "npm run build",
    "deploy:publish": "npm run build && npm run test && npm publish --access public",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rimraf dist",
    "build": "npm run clean && tsc",
    "lint": "eslint --ext .js,.ts ."
  },
  "author": "DVSA",
  "license": "MIT",
  "repository": "github:dvsa/azure-logger",
  "devDependencies": {
    "@azure/functions": "1.2.3",
    "@babel/core": "7.11.6",
    "@babel/preset-env": "7.11.5",
    "@babel/preset-typescript": "7.10.4",
    "@dvsa/eslint-config-ts": "1.0.1",
    "@types/jest": "25.2.3",
    "@types/node": "13.13.21",
    "@types/uuid": "8.3.0",
    "babel-jest": "25.5.1",
    "eslint": "6.8.0",
    "jest": "25.5.4",
    "rimraf": "3.0.2",
    "typescript": "3.9.7"
  },
  "dependencies": {
    "applicationinsights": "2.1.8",
    "winston": "3.1.0",
    "winston-transport": "4.4.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testRegex": "./tests/.*.test.ts$",
    "roots": [
      "<rootDir>"
    ]
  }
}
